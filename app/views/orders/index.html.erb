<p id="notice"><%= notice %></p>

<h1>Orders</h1>
<h2>My Orders</h2>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th>User</th>
      <th>Category</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <% if order.user_id == current_user.id %>
        <tr>
          <td><%= order.title %></td>
          <td><%= order.body %></td>
          <td><%= order.user.email %></td>
          <td><%= order.category.title %></td>
          <td><%= link_to 'Show', order %></td>
          <% if current_user && current_user.admin %>
            <td><%= link_to 'Edit', edit_order_path(order) %></td>
            <td><%= link_to 'Destroy', order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <% end %>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<h2>Other orders</h2>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th>User</th>
      <th>Category</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @orders.each do |order| %>
      <% if order.user_id != current_user.id %>
        <tr>
          <td><%= order.title %></td>
          <td><%= order.body %></td>
          <td><%= order.user.email %></td>
          <td><%= order.category.title %></td>
          <td><%= link_to 'Show', order %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

