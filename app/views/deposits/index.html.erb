<p id="notice"><%= notice %></p>

<h1>Deposits</h1>

<table>
  <thead>
    <tr>
      <th>Amount</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @deposits.each do |deposit| %>
      <% if (current_user.id == deposit.user_id) || current_user.admin %>
        <tr>
          <td><%= deposit.amount %></td>
          <td><%= deposit.user_id %></td>
          <td><%= link_to 'Show', deposit %></td>
          <% if current_user && current_user.admin %>
            <td><%= link_to 'Edit', edit_deposit_path(deposit) %></td>
            <td><%= link_to 'Destroy', deposit, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <% end %>
        </tr>
      <% end %>
    <% end %>
    <tfoot>
      <tr>
        <td><%= @balance %></td>
        <td colspan="2">Balance</td>
      </tr>
    </tfoot>
  </tbody>
</table>

<br>

<%= link_to 'New Deposit', new_deposit_path %>
