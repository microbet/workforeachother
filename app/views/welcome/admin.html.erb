<h1>Admin</h1>
<% @categories.each do |category| %>
  <%= category.title %><br>
<% end %>
<%= form_with(method: "get") do |form| %>

  <div class="control-group">
    <%= form.label :title, class: "control-label" %>
    <div class="controls">
      <%= form.text_field :title %>
    </div>
  </div>

  <div class="control-group">
    <%= form.label :description, class: "control-label" %>
    <div class="controls">
      <%= form.text_area :body %>
    </div>
  </div> 

  <div class="control-group">
    <%= form.label "Parent", class: "control-label" %>
    <div class="controls">
      <%= form.select(:parent, options_for_select(@selection_options)) %>
    </div>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
